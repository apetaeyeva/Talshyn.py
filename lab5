nums = [5, -2, 7, -10, 3]


print("Обратный порядок:", nums[::-1])


nums_sorted = sorted(nums, key=abs, reverse=True)
print("Сортировка по модулю:", nums_sorted)


def change_first_last(lst):
    if len(lst) >= 2:
        lst[0], lst[-1] = lst[-1], lst[0]
    return lst

print("После замены:", change_first_last(nums[:]))
